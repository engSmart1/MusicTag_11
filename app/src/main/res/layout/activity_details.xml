<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="musictag.hytham1.com.musictag.ActivityDetails">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/detsBandImage"
        android:background="@drawable/row_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="300dp"/>
    <TextView
        android:id="@+id/detsHeadLiner"
        android:text="HeadLiner"
        android:textColor="#e60606"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/detsBandImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detsVenue"
        android:text="Venue"
        android:textColor="#d14f4f"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/detsHeadLiner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detsWhere"
        android:text="Where"
        android:textColor="#d14f4f"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/detsVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detsWhen"
        android:text="When"
        android:textColor="#d14f4f"
        android:textStyle="normal"
        android:textSize="13sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/detsWhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
